<!-- login.hbs -->
<html>
  <head>
    <title>Login | Lunarr</title>
    <style>
      {{IncludeFile "css/login.css"}}
    </style>
    <script>
      {{IncludeFile "js/login.js"}}
    </script>
  </head>

  <body>
    <div class="login-container">
      <div class="login-form">
        <h1>Welcome to Lunarr</h1>
        <form id="login-form">
          <input type="text" name="username" placeholder="Username" required />
          <input type="password" name="password" placeholder="Password" required />
          <button type="submit">Login
            <div class="loader"></div>
          </button>
        </form>
        <div id="error-message" class="error-message"></div>
        <p class="signup-text">Don't have an account? <a class="signup-link" href="/signup">Signup</a></p>
      </div>
    </div>
  </body>
</html>